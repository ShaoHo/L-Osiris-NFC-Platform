generator client {
  provider   = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model NfcTag {
  id                String       @id @default(cuid())
  publicTagId       String       @unique
  status            NfcTagStatus @default(ACTIVE)
  boundExhibitionId String?
  curatorId         String?
  deletedAt         DateTime?
  purgeAfter        DateTime?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  boundExhibition   Exhibition?  @relation("NfcTagExhibition", fields: [boundExhibitionId], references: [id])
  curator           Curator?     @relation(fields: [curatorId], references: [id], onDelete: SetNull)

  @@index([publicTagId])
  @@index([boundExhibitionId])
  @@index([curatorId])
  @@index([deletedAt])
  @@index([purgeAfter])
}

model Curator {
  id         String         @id @default(cuid())
  name       String?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  exhibitions Exhibition[]
  nfcTags    NfcTag[]
  policy     CuratorPolicy?
}

model CuratorPolicy {
  id              String          @id @default(cuid())
  curatorId       String          @unique
  nfcScopePolicy  NfcScopePolicy  @default(EXHIBITION_ONLY)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  curator         Curator         @relation(fields: [curatorId], references: [id], onDelete: Cascade)

  @@index([curatorId])
}

model Exhibition {
  id                     String                  @id @default(cuid())
  type                   ExhibitionType
  totalDays              Int
  visibility             ExhibitionVisibility    @default(DRAFT)
  status                 ExhibitionStatus        @default(ACTIVE)
  curatorId              String?
  deletedAt              DateTime?
  purgeAfter             DateTime?
  createdAt              DateTime                @default(now())
  updatedAt              DateTime                @updatedAt
  exhibits               Exhibit[]
  nfcTags                NfcTag[]                @relation("NfcTagExhibition")
  viewerExhibitionStates ViewerExhibitionState[]
  versions               ExhibitionVersion[]
  accessGrants           AccessGrant[]
  curator                Curator?                @relation(fields: [curatorId], references: [id], onDelete: SetNull)

  @@index([status])
  @@index([visibility])
  @@index([curatorId])
  @@index([deletedAt])
  @@index([purgeAfter])
}

model ViewerProfile {
  id               String                  @id @default(cuid())
  nickname         String
  createdAt        DateTime                @default(now())
  updatedAt        DateTime                @updatedAt
  exhibitionStates ViewerExhibitionState[]
  sessions         ViewerSession[]
  accessGrants     AccessGrant[]
}

model ViewerSession {
  id        String        @id @default(cuid())
  viewerId  String?
  tokenHash String        @unique
  displayName String?
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  viewer    ViewerProfile? @relation(fields: [viewerId], references: [id], onDelete: Cascade)
  runs      ExhibitionRun[]

  @@index([viewerId])
  @@index([tokenHash])
  @@index([expiresAt])
}

model ExhibitionVersion {
  id          String               @id @default(cuid())
  exhibitionId String
  type        ExhibitionType
  totalDays   Int
  visibility  ExhibitionVisibility
  status      ExhibitionStatus
  deletedAt   DateTime?
  purgeAfter  DateTime?
  createdAt   DateTime             @default(now())
  exhibition  Exhibition           @relation(fields: [exhibitionId], references: [id], onDelete: Cascade)
  runs        ExhibitionRun[]
  accessGrants AccessGrant[]
  dayContents ExhibitionDayContent[]

  @@index([exhibitionId])
  @@index([deletedAt])
  @@index([purgeAfter])
}

model ExhibitionRun {
  id              String            @id @default(cuid())
  viewerSessionId String
  versionId       String
  startedAt       DateTime
  restartFromDay  Int
  deletedAt       DateTime?
  purgeAfter      DateTime?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  viewerSession   ViewerSession     @relation(fields: [viewerSessionId], references: [id], onDelete: Cascade)
  version         ExhibitionVersion @relation(fields: [versionId], references: [id], onDelete: Cascade)

  @@index([viewerSessionId])
  @@index([versionId])
  @@index([deletedAt])
  @@index([purgeAfter])
}

model ViewerExhibitionState {
  id           String                 @id @default(cuid())
  viewerId     String
  exhibitionId String
  status       ViewerExhibitionStatus @default(ACTIVE)
  activatedAt  DateTime?
  pausedAt     DateTime?
  lastDayIndex Int                    @default(1)
  createdAt    DateTime               @default(now())
  updatedAt    DateTime               @updatedAt
  exhibition   Exhibition             @relation(fields: [exhibitionId], references: [id], onDelete: Cascade)
  viewer       ViewerProfile          @relation(fields: [viewerId], references: [id], onDelete: Cascade)

  @@unique([viewerId, exhibitionId])
  @@index([viewerId])
  @@index([exhibitionId])
}

model AccessGrant {
  id           String             @id @default(cuid())
  viewerId     String
  exhibitionId String?
  versionId    String?
  expiresAt    DateTime?
  revokedAt    DateTime?
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  viewer       ViewerProfile      @relation(fields: [viewerId], references: [id], onDelete: Cascade)
  exhibition   Exhibition?        @relation(fields: [exhibitionId], references: [id], onDelete: Cascade)
  version      ExhibitionVersion? @relation(fields: [versionId], references: [id], onDelete: Cascade)

  @@index([viewerId])
  @@index([exhibitionId])
  @@index([versionId])
  @@index([expiresAt])
  @@index([revokedAt])
}

model AdminAction {
  id          String            @id @default(cuid())
  action      String
  status      AdminActionStatus @default(PENDING)
  requestedBy String
  payload     Json?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  auditLogs   AuditLog[]
}

model AuditLog {
  id            String       @id @default(cuid())
  eventType     String
  actor         String?
  entityType    String?
  entityId      String?
  payload       Json?
  adminActionId String?
  createdAt     DateTime     @default(now())
  adminAction   AdminAction? @relation(fields: [adminActionId], references: [id], onDelete: SetNull)

  @@index([eventType])
  @@index([entityType, entityId])
  @@index([adminActionId])
}

model User {
  id                   String     @id @default(cuid())
  email                String     @unique
  name                 String?
  passwordHash         String
  passwordUpdatedAt    DateTime?
  resetTokenHash       String?
  resetTokenExpiresAt  DateTime?
  lastLoginAt          DateTime?
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt
  roles                UserRole[]

  @@index([email])
  @@index([resetTokenExpiresAt])
}

model Role {
  id          String     @id @default(cuid())
  name        String     @unique
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  users       UserRole[]

  @@index([name])
}

model UserRole {
  id        String   @id @default(cuid())
  userId    String
  roleId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
}

model Exhibit {
  id           String            @id @default(cuid())
  exhibitionId String
  dayIndex     Int
  mode         ExhibitRenderMode
  blocksJson   Json?
  html         String?
  css          String?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  exhibition   Exhibition        @relation(fields: [exhibitionId], references: [id], onDelete: Cascade)

  @@unique([exhibitionId, dayIndex])
  @@index([exhibitionId])
  @@index([exhibitionId, dayIndex])
}

model ExhibitionDayContent {
  id           String                     @id @default(cuid())
  versionId    String
  dayIndex     Int
  status       ExhibitionDayContentStatus @default(DRAFT)
  html         String?
  css          String?
  assetRefs    Json?
  createdAt    DateTime                   @default(now())
  updatedAt    DateTime                   @updatedAt
  version      ExhibitionVersion          @relation(fields: [versionId], references: [id], onDelete: Cascade)
  assets       ExhibitionDayAsset[]

  @@unique([versionId, dayIndex, status])
  @@index([versionId])
  @@index([versionId, dayIndex])
  @@index([status])
}

model ExhibitionDayAsset {
  id           String               @id @default(cuid())
  dayContentId String
  assetUrl     String
  thumbnailUrl String?
  usageMetadata Json?
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  dayContent   ExhibitionDayContent @relation(fields: [dayContentId], references: [id], onDelete: Cascade)

  @@index([dayContentId])
}

model AiGenerationJob {
  id            String               @id @default(cuid())
  exhibitionId  String
  dayIndex      Int
  prompt        String
  assetMetadata Json?
  status        AiGenerationJobStatus @default(PENDING)
  errorMessage  String?
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  exhibition    Exhibition           @relation(fields: [exhibitionId], references: [id], onDelete: Cascade)

  @@index([exhibitionId])
  @@index([exhibitionId, dayIndex])
  @@index([status])
}

enum NfcTagStatus {
  ACTIVE
  INACTIVE
}

enum NfcScopePolicy {
  EXHIBITION_ONLY
  EXHIBITION_AND_GALLERY
}

enum ExhibitionType {
  ONE_TO_ONE
  ONE_TO_MANY
}

enum ExhibitionVisibility {
  DRAFT
  PUBLIC
}

enum ExhibitionStatus {
  ACTIVE
  ARCHIVED
}

enum ViewerExhibitionStatus {
  ACTIVE
  PAUSED
  COMPLETED
}

enum AdminActionStatus {
  PENDING
  CONFIRMED
  EXECUTED
}

enum ExhibitRenderMode {
  BLOCKS
  HTML
}

enum ExhibitionDayContentStatus {
  DRAFT
  PUBLISHED
}

enum AiGenerationJobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
